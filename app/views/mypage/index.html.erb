<% content_for :title, 'マイページ' %>

<div class="bg-white shadow rounded-lg p-6">
  <% if @user.present? %>
    <div class="flex items-center space-x-6 mb-4">
      <div class="flex-shrink-0">
        <% if @user.profile_image_url.present? %>
          <img src="<%= @user.profile_image_url %>" alt="プロフィール画像" class="w-24 h-24 rounded-full">
        <% else %>
          <div class="w-24 h-24 rounded-full bg-blue-600 flex items-center justify-center">
            <span class="text-white text-3xl"><%= @user.name[0] %></span>
          </div>
        <% end %>
      </div>
      <div class="flex-1">
        <h2 class="text-2xl font-bold text-gray-900"><%= @user.name %></h2>
        <p class="text-gray-500"><%= @user.generation %><%= ordinal_suffix(@user.generation) %></p>
        <p class="text-gray-500"><%= @user.birthday.strftime('%Y年%m月%d日') %></p>
      </div>
    </div>

    <% if @user.bio.present? %>
      <div class="mt-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">自己紹介</h3>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @user.bio %></p>
      </div>
    <% end %>

    <!-- アカウント管理セクション -->
    <div class="mt-6 border-t border-gray-200 pt-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">アカウント管理</h3>
      <div class="space-y-4">
        <%= link_to "新規ユーザー登録", new_user_auth_registration_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="mt-6 flex justify-end">
      <%# 編集機能は後で実装 %>
      <%#= link_to '編集', '#', class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-500">ユーザー情報が見つかりませんでした。</p>
      <%= link_to 'トップページへ戻る', root_path, class: 'mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>

