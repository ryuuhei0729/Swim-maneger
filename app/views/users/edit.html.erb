<% content_for :title, 'プロフィール編集' %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with(model: @user, local: true) do |f| %>
      <% if @user.errors.any? %>
        <div class="mb-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg">
          <h2 class="text-lg font-semibold mb-2">エラーが発生しました</h2>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :name, '名前', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= f.label :generation, '期生', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.number_field :generation, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= f.label :gender, '性別', class: 'block text-sm font-medium text-gray-700' %>
          <div class="mt-1">
            <div class="flex space-x-4">
              <div class="flex items-center">
                <%= f.radio_button :gender, 'male', class: 'h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500' %>
                <%= f.label :gender_male, '男性', class: 'ml-2 text-sm text-gray-700' %>
              </div>
              <div class="flex items-center">
                <%= f.radio_button :gender, 'female', class: 'h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500' %>
                <%= f.label :gender_female, '女性', class: 'ml-2 text-sm text-gray-700' %>
              </div>
            </div>
          </div>
        </div>

        <div>
          <%= f.label :birthday, '生年月日', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.date_field :birthday, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= f.label :profile_image_url, 'プロフィール画像URL', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :profile_image_url, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= f.label :bio, '自己紹介', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_area :bio, rows: 4, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div class="flex justify-end space-x-4">
          <%= link_to 'キャンセル', mypage_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
          <%= f.submit '更新', class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
        </div>
      </div>
    <% end %>
  </div>
</div> 