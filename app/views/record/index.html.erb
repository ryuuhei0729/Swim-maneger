<% content_for :title, 'Records' %>

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-900">ベストタイム</h2>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr>
          <th class="px-4 py-3 bg-gray-100 text-left text-xs font-medium text-gray-500 uppercase tracking-wider sticky left-0 z-10" rowspan="2">世代</th>
          <th class="px-4 py-3 bg-gray-100 text-left text-xs font-medium text-gray-500 uppercase tracking-wider sticky left-0 z-10" rowspan="2">選手名</th>
          <% @events.group_by { |e| e[:style] }.each do |style, events| %>
            <th class="px-4 py-3 bg-gray-100 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" colspan="<%= events.size %>">
              <%= style %>
            </th>
          <% end %>
        </tr>
        <tr>
          <% @events.each do |event| %>
            <th class="px-4 py-3 bg-gray-100 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= event[:title].match(/\d+m/)[0] %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @players_by_generation.each do |generation, players| %>
          <% players.each_with_index do |player, index| %>
            <tr class="hover:bg-gray-50">
              <% if index == 0 %>
                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900 sticky left-0 bg-white z-10" rowspan="<%= players.size %>">
                  <%= generation %>期
                </td>
              <% end %>
              <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900 sticky left-0 bg-white z-10">
                <%= player.name %>
              </td>
              <% @events.each do |event| %>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-center">
                  <% best_time = @best_times.find { |bt| bt.user_id == player.id } %>
                  <% if best_time %>
                    <%= best_time.send(event[:id]) %>
                  <% else %>
                    -
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 