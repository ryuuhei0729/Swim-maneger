                    style="background-color: <%= case style
                      when '自由形' then '#facc15'  # yellow-400
                      when '平泳ぎ' then '#4ade80'  # green-400
                      when '背泳ぎ' then '#f87171'  # red-400
                      when 'バタフライ' then '#60a5fa'  # blue-400
                      when '個人メドレー' then '#c084fc'  # purple-400
                      else '#f3f4f6'  # gray-100
                    end %>">
                  <%= style %>
                </th>
              <% end %>
            </tr>
            <tr>
              <% @events.each do |event| %>
