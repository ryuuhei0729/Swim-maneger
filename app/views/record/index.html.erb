                          when '自由形' then '#fefce8'  # yellow-50
                          when '平泳ぎ' then '#f0fdf4'  # green-50
                          when '背泳ぎ' then '#fef2f2'  # red-50
                          when 'バタフライ' then '#eff6ff'  # blue-50
                          when '個人メドレー' then '#faf5ff'  # purple-50
                          else '#f3f4f6'  # gray-100
                        end %>">
