<% content_for :title, 'Member' %>

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-900">メンバー</h2>
    <div class="flex space-x-4 mb-6">
      <button type="button" class="px-4 py-2 bg-blue-800 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" data-action="click->group#toggle" data-group-target="default">
        デフォルト
      </button>
      <button type="button" class="px-4 py-2 bg-blue-800 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" data-action="click->group#toggle" data-group-target="generation">
        期数別
      </button>
      <button type="button" class="px-4 py-2 bg-blue-800 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" data-action="click->group#toggle" data-group-target="type">
        種別
      </button>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <!-- デフォルト表示 -->
    <div id="default-view" data-group-view="default">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">プロフィール</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名前</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">期数</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">種別</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">生年月日</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50 cursor-pointer" data-action="click->modal#open" data-modal-target="user-modal-<%= user.id %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex-shrink-0">
                  <% if user.avatar.attached? %>
                    <%= image_tag url_for(user.avatar), alt: "#{user.name}のプロフィール画像", class: "w-16 h-16 rounded-full" %>
                  <% else %>
                    <div class="w-16 h-16 rounded-full bg-blue-800 flex items-center justify-center">
                      <span class="text-white text-sm"><%= user.name[0] %></span>
                    </div>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-blue-800 font-medium"><%= user.name %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">
                <%= user.generation %><%= ordinal_suffix(user.generation) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                <%= user.user_type == 'director' ? '監督/顧問' : (user.user_type == 'coach' ? 'コーチ' : '選手') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                <%= user.birthday.strftime('%Y年%m月%d日') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- 期数別表示 -->
    <div id="generation-view" class="hidden" data-group-view="generation">
      <% @grouped_by_generation.each do |generation, users| %>
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <%= generation %><%= ordinal_suffix(generation) %>
          </h3>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">プロフィール</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名前</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">種別</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">生年月日</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% users.each do |user| %>
                <tr class="hover:bg-gray-50 cursor-pointer" data-action="click->modal#open" data-modal-target="user-modal-<%= user.id %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex-shrink-0">
                      <% if user.avatar.attached? %>
                        <%= image_tag url_for(user.avatar), alt: "#{user.name}のプロフィール画像", class: "w-16 h-16 rounded-full" %>
                      <% else %>
                        <div class="w-16 h-16 rounded-full bg-blue-800 flex items-center justify-center">
                          <span class="text-white text-sm"><%= user.name[0] %></span>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-blue-800 font-medium"><%= user.name %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                    <%= user.user_type == 'director' ? '監督/顧問' : (user.user_type == 'coach' ? 'コーチ' : '選手') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                    <%= user.birthday.strftime('%Y年%m月%d日') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>

    <!-- 種別別表示 -->
    <div id="type-view" class="hidden" data-group-view="type">
      <% @grouped_by_type.each do |user_type, users| %>
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <%= user_type == 'director' ? '監督/顧問' : (user_type == 'coach' ? 'コーチ' : '選手') %>
          </h3>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">プロフィール</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名前</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">期数</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">生年月日</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% users.each do |user| %>
                <tr class="hover:bg-gray-50 cursor-pointer" data-action="click->modal#open" data-modal-target="user-modal-<%= user.id %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex-shrink-0">
                      <% if user.avatar.attached? %>
                        <%= image_tag url_for(user.avatar), alt: "#{user.name}のプロフィール画像", class: "w-16 h-16 rounded-full" %>
                      <% else %>
                        <div class="w-16 h-16 rounded-full bg-blue-800 flex items-center justify-center">
                          <span class="text-white text-sm"><%= user.name[0] %></span>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-blue-800 font-medium"><%= user.name %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-gray-600">
                    <%= user.generation %><%= ordinal_suffix(user.generation) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                    <%= user.birthday.strftime('%Y年%m月%d日') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- ユーザー詳細モーダル -->
<% @users.each do |user| %>
  <%= render "shared/modal", modal_id: "user-modal-#{user.id}", title: "#{user.name}の詳細情報" do %>
    <div class="flex items-center space-x-6 mb-6">
      <div class="flex-shrink-0">
        <% if user.avatar.attached? %>
          <%= image_tag url_for(user.avatar), alt: "#{user.name}のプロフィール画像", class: "w-24 h-24 rounded-full" %>
        <% else %>
          <div class="w-24 h-24 rounded-full bg-blue-800 flex items-center justify-center">
            <span class="text-white text-3xl"><%= user.name[0] %></span>
          </div>
        <% end %>
      </div>
      <div class="flex-1">
        <h2 class="text-2xl font-bold text-gray-900"><%= user.name %></h2>
        <p class="text-gray-500"><%= user.generation %><%= ordinal_suffix(user.generation) %></p>
        <p class="text-gray-500"><%= user.birthday.strftime('%Y年%m月%d日') %></p>
      </div>
    </div>
    
    <div class="mt-4 border-t border-gray-200 pt-4">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">自己紹介</h3>
      <% if user.bio.present? %>
        <p class="text-gray-700 whitespace-pre-wrap"><%= user.bio %></p>
      <% else %>
        <p class="text-gray-500 italic">自己紹介が設定されていません</p>
      <% end %>
    </div>
  <% end %>
<% end %> 