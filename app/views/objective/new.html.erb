<% content_for :title, 'Objective' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">新しい目標を設定</h1>

    <%= form_with(model: @objective, url: objective_path, local: true, class: "space-y-6") do |f| %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= f.label :attendance_event_id, "大会", class: "block text-sm font-medium text-gray-700" %>
            <% future_competitions = Competition.where("date >= ?", Date.current).order(:date) %>
            <% if future_competitions.exists? %>
              <%= f.collection_select :attendance_event_id, future_competitions, :id, :title, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <% else %>
              <p class="mt-1 text-sm text-red-600">予定されている大会がありません。先に大会を登録してください。</p>
            <% end %>
          </div>

          <div>
            <%= f.label :style_id, "種目", class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :style_id, Style.all, :id, :name_jp, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :target_time, "目標タイム", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 flex items-center">
              <%= f.number_field :minutes, class: "w-20 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 0, placeholder: "分" %>
              <span class="mx-2">分</span>
              <%= f.number_field :seconds, class: "w-20 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 0, max: 59, step: "0.01", placeholder: "秒" %>
              <span class="ml-2">秒</span>
            </div>
          </div>

          <div>
            <%= f.label :quantity_note, "定量目標", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :quantity_note, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", rows: 3, placeholder: "例：週に3回以上プールで練習する" %>
          </div>

          <div>
            <%= f.label :quality_title, "定性目標タイトル", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :quality_title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "例：ターンの改善" %>
          </div>

          <div>
            <%= f.label :quality_note, "定性目標詳細", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :quality_note, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", rows: 3, placeholder: "例：壁蹴りの強さを意識して、より速いターンを目指す" %>
          </div>

          <div>
            <div class="flex items-center justify-between">
              <label class="block text-sm font-medium text-gray-700">マイルストーン</label>
              <button type="button" id="add-milestone" class="inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                追加
              </button>
            </div>
            
            <div id="milestones-container" class="mt-3 space-y-4">
              <%= f.fields_for :milestones do |milestone| %>
                <%= render 'milestone_fields', f: milestone %>
              <% end %>
            </div>

            <template id="milestone-template">
              <div class="milestone-fields bg-gray-50 p-4 rounded-lg relative">
                <button type="button" class="remove-milestone absolute top-2 right-2 text-gray-400 hover:text-red-500">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
                <div class="grid grid-cols-1 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700">期限</label>
                    <input type="date" name="objective[milestones_attributes][INDEX][limit_date]" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700">内容</label>
                    <textarea name="objective[milestones_attributes][INDEX][note]" rows="2" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="例：50mを45秒で泳げるようになる"></textarea>
                  </div>
                </div>
              </div>
            </template>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end space-x-4">
          <%= link_to "キャンセル", objective_index_path, class: "text-sm font-medium text-gray-600 hover:text-gray-800" %>
          <%= f.submit "目標を設定する", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const addButton = document.getElementById('add-milestone');
  const container = document.getElementById('milestones-container');
  const template = document.getElementById('milestone-template');
  let index = 0;

  addButton.addEventListener('click', function() {
    const clone = template.content.cloneNode(true);
    const fields = clone.querySelector('.milestone-fields');
    
    // インデックスを置換
    fields.innerHTML = fields.innerHTML.replace(/INDEX/g, index);
    
    // 削除ボタンの設定
    const removeButton = fields.querySelector('.remove-milestone');
    removeButton.addEventListener('click', function() {
      fields.remove();
    });

    container.appendChild(fields);
    index++;
  });
});
</script> 