<div class="w-full pt-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">ようこそ <%= current_user_auth.user.name %> さん</h1>
    <p class="text-lg text-gray-600">Swim Managerへようこそ！</p>
  </div>

  <!-- お知らせセクション -->
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-12">
    <div class="flex items-center justify-between p-6 bg-blue-800">
      <h2 class="text-2xl font-bold text-white">お知らせ</h2>
    </div>

    <div class="p-6">
      <div class="space-y-6">
        <% if @announcements.any? %>
          <% @announcements.each do |announcement| %>
            <div class="border-l-4 border-blue-500 pl-4 py-2">
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="h-5 w-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    <%= announcement.title %>
                    <% if announcement.published_at >= 3.days.ago %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 ml-2">
                        New!!
                      </span>
                    <% end %>
                  </h3>
                  <p class="mt-1 text-gray-600"><%= announcement.content %></p>
                  <p class="mt-1 text-sm text-gray-500"><%= announcement.published_at.strftime("%Y/%m/%d (#{%w(日 月 火 水 木 金 土)[announcement.published_at.wday]}) %H:%M") %> 更新</p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-500">現在、お知らせはありません。</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="flex items-center justify-between p-6 bg-gradient-to-r bg-blue-800">
      <h2 class="text-2xl font-bold text-white">練習カレンダー</h2>
    </div>

    <div class="p-0">
      <div class="w-full">
        <iframe 
          src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=Asia%2FTokyo&showPrint=0&showTz=0&showCalendars=0&showTabs=0&showTitle=0&src=a29pc2hpa2F3YS5zd2ltbWluZy50ZWFtQGdtYWlsLmNvbQ&src=amEuamFwYW5lc2UjaG9saWRheUBncm91cC52LmNhbGVuZGFyLmdvb2dsZS5jb20&color=%23039BE5&color=%230B8043" 
          class="w-full" 
          height="600" 
          frameborder="0" 
          scrolling="no">
        </iframe>
      </div>
    </div>
  </div>
</div>

<script>
const userMenuButton = document.getElementById('userMenuButton');
const userMenu = document.getElementById('userMenu');
let isMenuOpen = false;

userMenuButton.addEventListener('click', () => {
  isMenuOpen = !isMenuOpen;
  userMenu.classList.toggle('hidden');
});

// メニュー外クリックで閉じる
document.addEventListener('click', (event) => {
  if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
    isMenuOpen = false;
    userMenu.classList.add('hidden');
  }
});
</script>
