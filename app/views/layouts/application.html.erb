<!DOCTYPE html>
<html>
  <head>
    <title>Swim Manager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-gray-50">
    <div class="min-h-screen flex">
      <% if user_auth_signed_in? %>
        <!-- サイドバー -->
        <div class="w-64 bg-blue-800 text-white min-h-screen flex flex-col">
          <!-- ロゴ部分 -->
          <div class="p-4">
            <h1 class="text-xl font-bold">Swim Manager</h1>
          </div>

          <!-- ナビゲーションリンク -->
          <nav class="flex-1 px-2 py-4 space-y-1">
            <%= link_to root_path, class: "flex items-center px-4 py-2 rounded-lg #{current_page?(root_path) ? 'bg-blue-900 text-white' : 'text-blue-100 hover:bg-blue-700'}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Home
            <% end %>

            <%= link_to "#", class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Record
            <% end %>

            <%= link_to "#", class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Member
            <% end %>

            <%= link_to "#", class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
              Objective
            <% end %>

            <%= link_to "#", class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Attendance
            <% end %>

            <%= link_to mypage_path, class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700 #{current_page?(mypage_path) ? 'bg-blue-900' : ''}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Mypage
            <% end %>

            <%= link_to "#", class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Settings
            <% end %>
          </nav>

          <!-- ユーザー情報とログアウト -->
          <div class="p-4 border-t border-blue-700">
            <div class="flex items-center mb-4">
              <div class="flex-shrink-0">
                <% if current_user&.profile_image_url.present? %>
                  <img src="<%= current_user.profile_image_url %>" alt="プロフィール画像" class="w-8 h-8 rounded-full">
                <% else %>
                  <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center">
                    <span class="text-white text-sm"><%= current_user&.name&.first || '?' %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-white"><%= current_user&.name || current_user_auth&.email %></p>
                <p class="text-xs text-blue-300"><%= current_user_auth&.email %></p>
              </div>
            </div>
            <%= button_to destroy_user_auth_session_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              ログアウト
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- メインコンテンツ -->
      <div class="flex-1">
        <% if user_auth_signed_in? %>
          <header class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
              <div class="flex justify-between">
                <h1 class="text-lg font-semibold text-gray-900">
                  <%= content_for?(:title) ? yield(:title) : 'Dashboard' %>
                </h1>
              </div>
            </div>
          </header>
        <% end %>

        <main class="flex-grow">
          <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <% if notice %>
              <div class="mb-4 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg">
                <%= notice %>
              </div>
            <% end %>
            <% if alert %>
              <div class="mb-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg">
                <%= alert %>
              </div>
            <% end %>

            <%= yield %>
          </div>
        </main>

        <footer class="bg-white shadow-sm mt-auto">
          <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-sm">
              &copy; <%= Time.current.year %> Swim Manager. All rights reserved.
            </p>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>
