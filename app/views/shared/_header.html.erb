<!-- ヘッダー -->
<header class="bg-white shadow-sm z-50">
  <div class="max-w-7xl mx-auto p-4">
    <div class="flex justify-between items-center">
      <!-- ページタイトル -->
      <div class="flex-shrink-0 flex items-center">
        <h1 class="text-xl font-bold text-gray-900">
          <%= content_for?(:title) ? yield(:title) : 'Home' %>
        </h1>
      </div>
      
      <!-- ログアウトボタン -->
      <div class="flex-shrink-0">
        <%= button_to destroy_user_auth_session_path, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" do %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span>ログアウト</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header> 