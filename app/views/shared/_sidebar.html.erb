<%# サイドバー %>
<div data-controller="sidebar" 
     data-sidebar-target="sidebar"
     data-sidebar-open-class="translate-x-0"
     data-sidebar-closed-class="-translate-x-full"
     class="w-64 bg-blue-800 text-white flex-shrink-0 fixed h-full z-50 transform transition-transform duration-300 ease-in-out -translate-x-full md:translate-x-0">
  
  <!-- ロゴ部分 -->
  <div class="p-4">
    <%= link_to home_path, class: "flex items-center", data: { turbo: false } do %>
      <h1 class="text-xl font-bold">Swim Manager</h1>
    <% end %>
  </div>

  <!-- ナビゲーションリンク -->
  <nav class="flex-1 px-2 py-4 space-y-1">
    <%= link_to home_path, class: "flex items-center px-4 py-2 rounded-lg #{current_page?(home_path) ? 'bg-blue-900 text-white' : 'text-blue-100 hover:bg-blue-700'}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      Home
    <% end %>

    <%= link_to practice_path, class: "flex items-center px-4 py-2 rounded-lg #{current_page?(practice_path) ? 'bg-blue-900 text-white' : 'text-blue-100 hover:bg-blue-700'}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      Practice
    <% end %>

    <%= link_to races_path, class: "flex items-center px-4 py-2 rounded-lg #{current_page?(races_path) ? 'bg-blue-900 text-white' : 'text-blue-100 hover:bg-blue-700'}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      Race
    <% end %>

    <%= link_to member_path, class: "flex items-center px-4 py-2 rounded-lg #{current_page?(member_path) ? 'bg-blue-900 text-white' : 'text-blue-100 hover:bg-blue-700'}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      Member
    <% end %>

    <%= link_to objective_index_path, class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700 #{current_page?(objective_index_path) ? 'bg-blue-900' : ''}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
      </svg>
      Objective
    <% end %>

    <%= link_to attendance_path, class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700 #{current_page?(attendance_path) ? 'bg-blue-900' : ''}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      Attendance
    <% end %>

    <%= link_to mypage_path, class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700 #{current_page?(mypage_path) ? 'bg-blue-900' : ''}", data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      Mypage
    <% end %>

    <% if current_user_auth.user.user_type.in?(['coach', 'director', 'manager']) %>
      <div class="relative group">
        <%= link_to admin_path, class: "flex items-center px-4 py-2 text-blue-100 rounded-lg hover:bg-blue-700", data: { turbo: false } do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span class="flex-1">Admin</span>
          <svg class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        <% end %>
        
        <!-- ドロップダウンメニュー -->
        <div class="absolute left-0 top-full mt-1 w-64 bg-blue-900 border border-blue-700 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
          <div class="py-2">
            <%= link_to admin_users_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              ユーザー管理
            <% end %>
            
            <%= link_to admin_schedule_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              スケジュール管理
            <% end %>
            
            <%= link_to admin_objective_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 4h.01M9 16h.01" />
              </svg>
              目標管理
            <% end %>
            
            <%= link_to admin_announcement_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
              </svg>
              お知らせ管理
            <% end %>
            
            <%= link_to admin_attendance_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              出欠管理
            <% end %>
            
            <%= link_to admin_practice_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              練習管理
            <% end %>
            
            <%= link_to admin_competition_path, class: "flex items-center px-4 py-2 text-sm text-blue-100 hover:bg-blue-800 transition-colors duration-150", data: { turbo: false } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              大会管理
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </nav>
</div>

<!-- オーバーレイ（モバイル用） -->
<div data-sidebar-target="overlay" 
     data-action="click->sidebar#closeOnOverlayClick"
     class="fixed inset-0 bg-black bg-opacity-30 z-30 hidden md:hidden"></div> 