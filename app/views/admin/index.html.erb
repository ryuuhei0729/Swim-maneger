<% content_for :title, 'Admin' %>

<div class="w-full pt-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">管理者画面</h1>
    <p class="text-lg text-red-500">※コーチ、部活動指導員、顧問のみがアクセス可能です</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- ユーザー新規登録カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-blue-100 p-3">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">ユーザー新規登録</h3>
        </div>
        <p class="text-gray-600 mb-4">ユーザーの追加を行うことができます</p>
        <%= link_to admin_create_user_path, class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } do %>
          新規登録画面へ
        <% end %>
      </div>
    </div>

    <!-- スケジュール管理カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-green-100 p-3">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">スケジュール管理</h3>
        </div>
        <p class="text-gray-600 mb-4">練習や大会などのスケジュール管理機能</p>
        <%= link_to admin_schedule_path, class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } do %>
          管理画面へ
        <% end %>
      </div>
    </div>

    <!-- 目標管理カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-purple-100 p-3">
            <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">目標管理</h3>
        </div>
        <p class="text-gray-600 mb-4">部員の目標設定状況の確認と管理を行うことができます</p>
        <%= link_to admin_objective_path, class: "w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } do %>
          管理画面へ
        <% end %>
      </div>
    </div>

    <!-- お知らせ管理カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-yellow-100 p-3">
            <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">お知らせ管理</h3>
        </div>
        <p class="text-gray-600 mb-4">お知らせの追加、編集、削除などの管理機能</p>
        <%= link_to "お知らせ管理画面へ", admin_announcement_path, class: "w-full bg-yellow-600 text-white py-2 px-4 rounded-md hover:bg-yellow-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } %>
      </div>
    </div>

    <!-- システム設定カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-red-100 p-3">
            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">システム設定 (WIP)</h3>
        </div>
        <p class="text-gray-600 mb-4">システムの各種設定やパラメータの管理（WIP）</p>
        <%= link_to "#", class: "w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } do %>
          設定画面へ
        <% end %>
      </div>
    </div>

    <!-- 練習管理カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-indigo-100 p-3">
            <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">練習管理</h3>
        </div>
        <p class="text-gray-600 mb-4">練習メニューの作成と管理、練習記録の確認</p>
        <%= link_to admin_practice_path, class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition-colors duration-300 inline-block text-center", data: { turbo: false } do %>
          練習管理画面へ
        <% end %>
      </div>
    </div>
  </div>
</div>
