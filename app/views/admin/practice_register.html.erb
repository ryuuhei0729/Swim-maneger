<% content_for :title, 'Admin' %>

<div class="w-full pt-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">練習メニュー画像 登録画面</h1>
    <p class="text-lg text-gray-600">画像をアップロードして練習メニューを登録します</p>
  </div>

  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-6">
        <%= form_with(model: @attendance_event, url: admin_practice_register_create_path, local: true, class: "space-y-6") do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">練習日</label>
            <%= f.select :id, 
                         options_from_collection_for_select(@attendance_events, :id, ->(e) { "#{e.date.strftime('%Y/%m/%d')} #{e.title}" }, @default_event&.id),
                         { prompt: '練習を選択' },
                         { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">練習メニュー画像</label>
            <%= f.file_field :menu_image, class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
            <p class="mt-1 text-sm text-gray-500">JPEG, PNG, PDF形式のファイルのみアップロードできます。</p>
          </div>

          <div class="flex justify-end space-x-4">
            <%= link_to "キャンセル", admin_practice_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= f.submit "登録・更新する", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 