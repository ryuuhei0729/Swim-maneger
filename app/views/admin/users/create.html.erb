<% content_for :title, 'Admin' %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">新規ユーザー登録</h2>
          <div class="flex items-center space-x-4">
            <%= link_to admin_users_import_path, class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors duration-300" do %>
              ユーザー一括登録
            <% end %>
            <%= link_to "管理者画面に戻る", admin_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          </div>
        </div>
        <p class="mt-1 text-sm text-gray-500">以下の情報を入力してユーザーを登録してください</p>
      </div>

      <div class="px-8 py-6">
        <%= form_with(url: admin_users_path, method: :post, local: true, class: "space-y-6") do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 p-4 rounded-lg">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    入力内容に誤りがあります
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.messages.each do |attribute, messages| %>
                        <% messages.each do |message| %>
                          <li>
                            <% case attribute.to_s %>
                            <% when 'name' %>
                              名前を入力してください
                            <% when 'email' %>
                              メールアドレスを入力してください
                            <% when 'password' %>
                              パスワードを入力してください
                            <% when 'password_confirmation' %>
                              パスワード（確認）を入力してください
                            <% when 'user_type' %>
                              ユーザータイプを選択してください
                            <% when 'generation' %>
                              期数を入力してください
                            <% when 'gender' %>
                              性別を選択してください
                            <% when 'birthday' %>
                              生年月日を入力してください
                            <% else %>
                              <%= attribute.to_s.humanize %>を入力してください
                            <% end %>
                          </li>
                        <% end %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <div>
              <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field "user[name]", value: @user.name, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:name].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:name].any? %>
                <p class="mt-1 text-sm text-red-600">名前を入力してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field "user_auth[email]", value: @user_auth.email, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:email].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:email].any? %>
                <p class="mt-1 text-sm text-red-600">メールアドレスを入力してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field "user_auth[password]", class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:password].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:password].any? %>
                <p class="mt-1 text-sm text-red-600">パスワードを入力してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field "user_auth[password_confirmation]", class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:password_confirmation].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:password_confirmation].any? %>
                <p class="mt-1 text-sm text-red-600">パスワード（確認）を入力してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :user_type, "ユーザータイプ", class: "block text-sm font-medium text-gray-700" %>
              <%= f.select "user[user_type]", 
                  [['選手', 'player'], ['コーチ', 'coach'], ['顧問・監督', 'director'], ['マネージャー', 'manager']],
                  { selected: @user.user_type }, 
                  class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:user_type].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:user_type].any? %>
                <p class="mt-1 text-sm text-red-600">ユーザータイプを選択してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :generation, "期数", class: "block text-sm font-medium text-gray-700" %>
              <%= f.number_field "user[generation]", value: @user.generation, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:generation].any? ? 'border-red-300' : ''}", min: 1 %>
              <% if @user.errors[:generation].any? %>
                <p class="mt-1 text-sm text-red-600">期数を入力してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :gender, "性別", class: "block text-sm font-medium text-gray-700" %>
              <%= f.select "user[gender]", 
                  [['男性', 'male'], ['女性', 'female']], 
                  { selected: @user.gender }, 
                  class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:gender].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:gender].any? %>
                <p class="mt-1 text-sm text-red-600">性別を選択してください</p>
              <% end %>
            </div>

            <div>
              <%= f.label :birthday, "生年月日", class: "block text-sm font-medium text-gray-700" %>
              <%= f.date_field "user[birthday]", value: @user.birthday, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3 #{@user.errors[:birthday].any? ? 'border-red-300' : ''}" %>
              <% if @user.errors[:birthday].any? %>
                <p class="mt-1 text-sm text-red-600">生年月日を入力してください</p>
              <% end %>
            </div>
          </div>

          <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to "キャンセル", admin_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= f.submit "登録", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 