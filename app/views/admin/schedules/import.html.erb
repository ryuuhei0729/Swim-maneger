<% content_for :title, 'Admin' %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">スケジュール一括登録</h2>
          <div class="flex items-center space-x-4">
            <%= link_to "スケジュール管理に戻る", admin_schedule_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            <%= link_to "管理者画面に戻る", admin_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          </div>
        </div>
        <p class="mt-1 text-sm text-gray-500">Excelファイルを使用してスケジュールを一括で登録できます</p>
      </div>

      <div class="px-8 py-6">
        <!-- エラーメッセージ表示 -->
        <% if @errors.present? %>
          <div class="mb-6 bg-red-50 p-4 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">エラーが発生しました</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5">
                    <% @errors.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Excelテンプレートダウンロード -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">1. Excelテンプレートをダウンロード</h3>
          <div class="bg-blue-50 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-700 mb-2">まずはテンプレートファイルをダウンロードしてください</p>
                <p class="text-xs text-gray-500">月別シートでカレンダー形式、入力した日のみスケジュールが登録されます</p>
              </div>
              <%= link_to admin_schedule_import_template_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-300" do %>
                <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                テンプレートダウンロード
              <% end %>
            </div>
          </div>
        </div>

        <!-- Excelファイルアップロード -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">2. Excelファイルをアップロード</h3>
          <%= form_with url: admin_schedule_import_preview_path, multipart: true, class: "space-y-4", id: "excel_upload_form" do |f| %>
            <label for="excel_file" class="cursor-pointer block">
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 hover:border-gray-400 transition-colors">
                <div class="text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                  <div class="mt-4">
                    <span class="mt-2 block text-sm font-medium text-gray-900">
                      Excelファイルをアップロード
                    </span>
                    <p class="mt-2 text-xs text-gray-500">ファイルを選択すると自動的にプレビューが表示されます</p>
                  </div>
                </div>
              </div>
              <%= f.file_field :csv_file, id: "excel_file", class: "sr-only", accept: ".xlsx,.xls" %>
            </label>
          <% end %>
          
          <script>
            document.getElementById('excel_file').addEventListener('change', function(e) {
              if (e.target.files.length > 0) {
                // ファイルが選択されたら自動的にフォームを送信
                document.getElementById('excel_upload_form').submit();
              }
            });
          </script>
        </div>





        <!-- プレビュー -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">3. プレビュー</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <% if @preview_data.present? %>
              <div class="mb-4">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-medium text-gray-900"><%= @preview_data.size %>件のスケジュールが登録されます</p>
                  <%= link_to admin_schedule_import_path(clear_preview: true), class: "text-sm text-blue-600 hover:text-blue-500" do %>
                    プレビューをクリア
                  <% end %>
                </div>
              </div>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">タイトル</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日付</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">場所</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">備考</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">大会</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">出欠管理</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @preview_data.each do |data| %>
                      <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= data[:title] %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <% if data[:date] %>
                            <%= data[:date].strftime('%Y/%m/%d') %>
                            <span class="text-gray-500">(<%= %w[日 月 火 水 木 金 土][data[:date].wday] %>)</span>
                          <% else %>
                            <span class="text-gray-500">日付なし</span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= data[:place] %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= data[:note] %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <% if data[:is_competition] %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              大会
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              練習
                            </span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <% if data[:requires_attendance] %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                              出欠管理あり
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                              出欠管理なし
                            </span>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-sm text-gray-600 text-center py-8">
                Excelファイルをアップロードするとここにプレビューが表示されます
              </div>
            <% end %>
          </div>
        </div>

        <!-- アクションボタン -->
        <div class="flex justify-end space-x-4">
          <%= link_to admin_schedule_path, class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            キャンセル
          <% end %>
          <% if @preview_data.present? %>
            <%= form_with url: admin_schedule_import_execute_path, method: :post, local: true, class: "inline-block" do |f| %>
              <%= f.submit "一括登録実行", class: "px-6 py-3 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500", data: { confirm: "#{@preview_data.size}件のスケジュールを一括登録しますか？" } %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 