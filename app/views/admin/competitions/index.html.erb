<script>
// エントリー受付状況の更新
document.addEventListener('DOMContentLoaded', function() {
  // スムーズスクロール機能
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // カンバンボード機能
  initializeKanbanBoard();
});

// カンバンボード初期化
function initializeKanbanBoard() {
  // ドラッグ&ドロップの初期化
  const kanbanColumns = document.querySelectorAll('.kanban-column');
  kanbanColumns.forEach(column => {
    column.addEventListener('dragover', allowDrop);
    column.addEventListener('drop', dropCard);
  });


}

// ドラッグ開始
function dragStart(event) {
  event.dataTransfer.setData('text/plain', event.target.dataset.competitionId);
  event.target.style.opacity = '0.5';
}

// ドロップを許可
function allowDrop(event) {
  event.preventDefault();
}

// カードドロップ
function dropCard(event) {
  event.preventDefault();
  const competitionId = event.dataTransfer.getData('text/plain');
  const newStatus = event.currentTarget.querySelector('[data-status]').dataset.status;
  const card = document.querySelector(`[data-competition-id="${competitionId}"]`);
  
  if (card) {
    const currentStatus = card.dataset.currentStatus;
    
    if (newStatus !== currentStatus) {
      changeStatus(competitionId, newStatus);
    }
    
    card.style.opacity = '1';
  }
}

// ステータス変更
function changeStatus(competitionId, newStatus) {
  const url = '<%= admin_update_competition_entry_status_path(':id') %>'.replace(':id', competitionId);
  
      fetch(url, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content')
        },
        body: JSON.stringify({ entry_status: newStatus })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
      // カードを新しい列に移動
      moveCardToColumn(competitionId, newStatus);
      // ステータス表示を更新
      updateCardStatus(competitionId, newStatus);
      // カウンターを更新
      updateColumnCounts();
        } else {
          alert(data.message || '更新に失敗しました');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('更新中にエラーが発生しました');
  });
}

// カードを新しい列に移動
function moveCardToColumn(competitionId, newStatus) {
  const card = document.querySelector(`[data-competition-id="${competitionId}"]`);
  const newColumn = document.querySelector(`[data-status="${newStatus}"]`);
  
  if (card && newColumn) {
    card.dataset.currentStatus = newStatus;
    newColumn.appendChild(card);
    
    // アニメーション効果
    card.style.transform = 'scale(0.95)';
    setTimeout(() => {
      card.style.transform = 'scale(1)';
    }, 150);
  }
}

// カードのステータス表示を更新
function updateCardStatus(competitionId, newStatus) {
  const card = document.querySelector(`[data-competition-id="${competitionId}"]`);
  if (!card) return;
  
  const statusIndicator = card.querySelector('.status-indicator span');
  if (statusIndicator) {
    switch (newStatus) {
      case 'before':
        statusIndicator.className = 'inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800';
        statusIndicator.textContent = '受付前';
        break;
      case 'open':
        statusIndicator.className = 'inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800';
        statusIndicator.textContent = '受付中';
        break;
      case 'closed':
        statusIndicator.className = 'inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800';
        statusIndicator.textContent = '締切済';
        break;
    }
  }
}

// 列のカウンターを更新
function updateColumnCounts() {
  ['before', 'open', 'closed'].forEach(status => {
    const column = document.querySelector(`[data-status="${status}"]`);
    if (column) {
      const count = column.querySelectorAll('.competition-card').length;
      const badge = column.closest('.kanban-column').querySelector('span');
      if (badge) {
        badge.textContent = count;
      }
    }
  });
}



window.loadEntriesData = function(eventId, contentElement = null) {
