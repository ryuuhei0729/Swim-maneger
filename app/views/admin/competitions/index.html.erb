<div class="p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">大会管理</h2>
  
  <!-- 大会一覧 -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold mb-4 text-gray-700">大会一覧</h3>
    
    <% if @competitions.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                大会名
              </th>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                開催日
              </th>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                開催場所
              </th>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                エントリー受付状況
              </th>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                エントリー確認
              </th>
              <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                結果入力
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @competitions.each do |competition| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= competition.title %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= competition.date.strftime("%Y年%m月%d日") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= competition.place %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <select class="entry-status-select border border-gray-300 rounded px-2 py-1 text-sm" 
                          data-competition-id="<%= competition.id %>"
                          data-current-status="<%= competition.entry_status %>">
                    <option value="before" <%= 'selected' if competition.entry_status == 'before' %>>受付前</option>
                    <option value="open" <%= 'selected' if competition.entry_status == 'open' %>>受付中</option>
                    <option value="closed" <%= 'selected' if competition.entry_status == 'closed' %>>締切済</option>
                  </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <div data-controller="modal">
                    <button data-action="click->modal#open"
                            data-modal-id="entriesModal"
                            data-event-id="<%= competition.id %>"
                            onclick="loadEntriesData(<%= competition.id %>)"
                            class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-1 px-3 rounded text-sm transition duration-200">
                      確認
                    </button>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= link_to "結果入力", admin_competition_result_path(competition), 
                      class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-1 px-3 rounded text-sm transition duration-200" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">登録されている大会がありません。</p>
        <p class="text-sm text-gray-400 mt-2">大会は「スケジュール管理」で「大会」として登録できます。</p>
      </div>
    <% end %>
  </div>

  <!-- 今後の開発予定 -->
  <div class="bg-blue-50 rounded-lg p-6 mb-6">
    <h3 class="text-lg font-semibold mb-4 text-blue-800">今後の開発予定</h3>
    
    <div class="space-y-4">
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0 w-6 h-6 bg-blue-200 rounded-full flex items-center justify-center">
          <span class="text-blue-600 text-sm font-medium">1</span>
        </div>
        <div>
          <h4 class="font-medium text-blue-800">エントリー管理機能</h4>
          <p class="text-sm text-blue-600 mt-1">
            各大会に対して部員のエントリーを管理する機能を追加予定です。
            <br>
            ・エントリー種目の選択
            <br>
            ・エントリー締切の管理
            <br>
            ・エントリー状況の確認
          </p>
        </div>
      </div>
      
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0 w-6 h-6 bg-blue-200 rounded-full flex items-center justify-center">
          <span class="text-blue-600 text-sm font-medium">2</span>
        </div>
        <div>
          <h4 class="font-medium text-blue-800">大会結果入力機能</h4>
          <p class="text-sm text-blue-600 mt-1">
            大会後に結果を入力・管理する機能を追加予定です。
            <br>
            ・各種目の結果入力
            <br>
            ・順位・タイムの記録
            <br>
            ・部員の成績管理
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- 大会の新規作成へのリンク -->
  <div class="flex justify-end">
    <%= link_to "大会を新規作成", admin_schedule_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200",
        title: "スケジュール管理画面で「大会」として新規作成できます" %>
  </div>
</div>

<!-- エントリー詳細モーダル -->
<%= render 'shared/modal', modal_id: 'entriesModal', title: 'エントリー詳細' do %>
  <div id="entriesContent" class="space-y-6">
    <!-- エントリー内容がここに動的に追加される -->
  </div>
<% end %>

<script>
// エントリー受付状況の更新
document.addEventListener('DOMContentLoaded', function() {
  const statusSelects = document.querySelectorAll('.entry-status-select');
  
  statusSelects.forEach(select => {
    select.addEventListener('change', function() {
      const competitionId = this.getAttribute('data-competition-id');
      const newStatus = this.value;
      const currentStatus = this.getAttribute('data-current-status');
      
      if (newStatus === currentStatus) {
        return; // 変更がない場合は何もしない
      }
      
      // 確認ダイアログ
      if (!confirm('エントリー受付状況を変更しますか？')) {
        this.value = currentStatus; // 元の値に戻す
        return;
      }
      
      // AJAXで更新
      fetch(`/admin/competition/${competitionId}/entry_status`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ entry_status: newStatus })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          // 成功時は現在の値を更新
          this.setAttribute('data-current-status', newStatus);
          alert(data.message);
        } else {
          // 失敗時は元の値に戻す
          this.value = currentStatus;
          alert(data.message || '更新に失敗しました');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        this.value = currentStatus; // 元の値に戻す
        alert('更新中にエラーが発生しました');
      });
    });
  });
});

function loadEntriesData(eventId) {
  fetch(`/admin/competition/entry/${eventId}`, {
    method: 'GET',
    headers: {
      'Accept': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.error) {
      alert(data.error);
      return;
    }
    
    // エントリー内容を生成
    let content = '';
    
    if (data.entries.length === 0) {
      content = '<div class="text-center py-8"><p class="text-gray-500">まだエントリーがありません。</p></div>';
    } else {
      // 種目別に表示
      Object.keys(data.entries_by_style).forEach(styleId => {
        const styleEntries = data.entries_by_style[styleId];
        if (styleEntries.length > 0) {
          const styleName = styleEntries[0].style_name || 'Unknown Style';
          
          content += `
            <div class="mb-6">
              <h4 class="text-lg font-semibold text-gray-800 mb-3 border-b border-gray-200 pb-2">${styleName}</h4>
              <div class="space-y-2">
          `;
          
          styleEntries.forEach(entry => {
            content += `
              <div class="flex items-center justify-between py-2 px-4 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-3">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    ${entry.user_generation}期
                  </span>
                  <span class="font-medium text-gray-900">${entry.user_name}</span>
                </div>
                <div class="text-right">
                  <span class="text-lg font-semibold text-gray-900">${entry.entry_time}</span>
                  ${entry.note ? `<div class="text-sm text-gray-500">${entry.note}</div>` : ''}
                </div>
              </div>
            `;
          });
          
          content += `
              </div>
            </div>
          `;
        }
      });
    }
    
    document.getElementById('entriesContent').innerHTML = content;
  })
  .catch(error => {
    console.error('Error:', error);
    alert('エントリー情報の取得に失敗しました。');
  });
}
</script> 