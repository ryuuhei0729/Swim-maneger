<% content_for :title, '練習管理' %>

<div class="w-full pt-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">練習管理</h1>
    <p class="text-lg text-gray-600">練習メニューの作成と管理、練習記録の確認ができます</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- 練習メニュー作成カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-blue-100 p-3">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">練習メニュー作成</h3>
        </div>
        <p class="text-gray-600 mb-4">新しい練習メニューを作成します</p>
        <%= link_to admin_practice_log_path, class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-300 inline-block text-center" do %>
          メニューを作成
        <% end %>
      </div>
    </div>

    <!-- 練習タイム入力カード -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="rounded-full bg-green-100 p-3">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="ml-4 text-xl font-semibold text-gray-900">練習タイム入力</h3>
        </div>
        <p class="text-gray-600 mb-4">練習タイムを入力します</p>
        <%= link_to admin_practice_time_path, class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors duration-300 inline-block text-center" do %>
          タイムを入力
        <% end %>
      </div>
    </div>
  </div>

  <!-- 最近の練習メニュー -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">最近の練習メニュー</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日付</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">泳法</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">距離</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">本数×セット</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">サークル</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @practice_logs.each do |log| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.attendance_event.date.strftime('%Y/%m/%d') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= PracticeLog::STYLE_OPTIONS[log.style] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.distance %>m
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.rep_count %>×<%= log.set_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= format('%.1f', log.circle) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <button class="text-indigo-600 hover:text-indigo-900">詳細</button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 