<% content_for :title, 'Admin' %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">お知らせ管理</h2>
          <%= link_to "管理者画面に戻る", admin_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
        </div>
        <p class="mt-1 text-sm text-gray-500">お知らせの追加、編集、削除ができます</p>
      </div>

      <div class="px-8 py-6">
        <% if flash[:notice] %>
          <div class="mb-6 bg-green-50 p-4 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- お知らせ一覧 -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">・お知らせ一覧</h3>
          
          <% if @announcements.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">タイトル</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">内容</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">公開日時</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @announcements.each do |announcement| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= announcement.title %></td>
                      <td class="px-6 py-4 text-sm text-gray-500">
                        <%= truncate(announcement.content, length: 50) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <% if announcement.is_active %>
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">公開</span>
                        <% else %>
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">非公開</span>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= l(announcement.published_at, format: :short) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex space-x-5">
                          <button type="button" class="text-blue-600 hover:text-blue-900 cursor-pointer" data-action="click->modal#open" data-modal-id="edit-announcement-<%= announcement.id %>">
                            編集
                          </button>
                          <%= button_to "削除", admin_destroy_announcement_path(announcement), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                        </div>
                      </td>
                    </tr>

                    <!-- 編集モーダル -->
                    <%= render "shared/modal", modal_id: "edit-announcement-#{announcement.id}", title: "お知らせの編集" do %>
                      <%= form_with(model: announcement, url: admin_update_announcement_path(announcement), method: :patch, local: true) do |f| %>
                        <div class="mb-4">
                          <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
                          <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
                        </div>
                        
                        <div class="mb-4">
                          <%= f.label :content, "内容", class: "block text-sm font-medium text-gray-700 mb-1" %>
                          <%= f.text_area :content, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
                        </div>
                        
                        <div class="mb-4">
                          <div class="flex items-center">
                            <%= f.check_box :is_active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                            <%= f.label :is_active, "公開する", class: "ml-2 block text-sm text-gray-900" %>
                          </div>
                        </div>
                        
                        <div class="mb-4">
                          <%= f.label :published_at, "公開日時", class: "block text-sm font-medium text-gray-700 mb-1" %>
                          <%= f.datetime_local_field :published_at, 
                              value: announcement.published_at.in_time_zone('Tokyo').strftime("%Y-%m-%dT%H:%M"), 
                              min: Time.current.in_time_zone('Tokyo').strftime("%Y-%m-%dT%H:%M"),
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
                        </div>
                        
                        <div class="flex justify-end space-x-3">
                          <button type="button" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500" data-action="click->modal#close">
                            キャンセル
                          </button>
                          <%= f.submit "更新", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-4">お知らせはまだありません</p>
          <% end %>
        </div>

        <!-- 新規お知らせ作成フォーム -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">・新規お知らせ作成</h3>
          
          <%= form_with(model: @announcement, url: admin_announcement_path, method: :post, local: true) do |f| %>
            <% if @announcement.errors.any? %>
              <div class="mb-4 bg-red-50 p-4 rounded-lg">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      入力内容に誤りがあります
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc pl-5 space-y-1">
                        <% @announcement.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <div class="mb-4">
              <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            
            <div class="mb-4">
              <%= f.label :content, "内容", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_area :content, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            
            <div class="mb-4">
              <div class="flex items-center">
                <%= f.check_box :is_active, checked: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= f.label :is_active, "公開する", class: "ml-2 block text-sm text-gray-900" %>
              </div>
            </div>
            
            <div class="mb-4">
              <%= f.label :published_at, "公開日時", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.datetime_local_field :published_at, 
                  value: Time.current.in_time_zone('Tokyo').strftime("%Y-%m-%dT%H:%M"), 
                  min: Time.current.in_time_zone('Tokyo').strftime("%Y-%m-%dT%H:%M"),
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            
            <div class="flex justify-end">
              <%= f.submit "作成", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const modalController = {
    open(event) {
      const button = event.target.closest('[data-action="click->modal#open"]');
      if (button) {
        const modalId = button.dataset.modalId;
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.classList.remove("hidden");
          document.body.style.overflow = "hidden";
        }
      }
    },

    close(event) {
      const button = event.target.closest('[data-action="click->modal#close"]');
      if (button) {
        const modal = button.closest(".fixed");
        if (modal) {
          modal.classList.add("hidden");
          document.body.style.overflow = "";
        }
      }
    }
  };

  // モーダルを開くボタンのイベントリスナー
  document.addEventListener('click', function(event) {
    const openButton = event.target.closest('[data-action="click->modal#open"]');
    if (openButton) {
      modalController.open(event);
    }
  });

  // モーダルを閉じるボタンのイベントリスナー
  document.addEventListener('click', function(event) {
    const closeButton = event.target.closest('[data-action="click->modal#close"]');
    if (closeButton) {
      modalController.close(event);
    }
  });

  // 背景クリックでモーダルを閉じる
  document.addEventListener('click', function(event) {
    const modal = event.target.closest('.fixed');
    if (modal && event.target === modal) {
      modal.classList.add("hidden");
      document.body.style.overflow = "";
    }
  });

  // フォーム送信時のイベント伝播を止める
  document.querySelectorAll('.fixed form').forEach(form => {
    form.addEventListener('submit', function(event) {
      event.stopPropagation();
    });
  });
});
</script> 