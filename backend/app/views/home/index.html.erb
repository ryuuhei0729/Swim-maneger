<% content_for :title, 'Home' %>
<div class="w-full pt-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">ようこそ <%= current_user_auth.user.name %> さん</h1>
    <p class="text-lg text-gray-600">Swim Managerへようこそ！</p>
  </div>

  <!-- お知らせセクション -->
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-12">
    <div class="flex items-center justify-between p-6 bg-blue-800">
      <h3 class="text-xl font-bold text-white">お知らせ</h3>
    </div>

    <div class="p-6">
      <div class="space-y-6">
        <% if @birthday_users.any? %>
          <div class="border-l-4 border-pink-500 pl-4 py-2">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg class="h-5 w-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-medium text-gray-900">
                  <% @birthday_users.each do |user| %>
                    <span class="text-pink-500"><%= user.name %></span>さん、
                  <% end %>
                  お誕生日おめでとうございます！
                </h3>
              </div>
            </div>
          </div>
        <% end %>

        <% if @announcements.any? %>
          <% @announcements.each do |announcement| %>
            <div class="border-l-4 border-blue-500 pl-4 py-2">
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="h-5 w-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    <%= announcement.title %>
                    <% if announcement.published_at >= 3.days.ago %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 ml-2">
                        New!!
                      </span>
                    <% end %>
                  </h3>
                  <p class="mt-1 text-gray-600"><%= announcement.content %></p>
                  <p class="mt-1 text-sm text-gray-500"><%= announcement.published_at.strftime("%Y/%m/%d (#{%w(日 月 火 水 木 金 土)[announcement.published_at.wday]}) %H:%M") %> 更新</p>
                </div>
              </div>
            </div>
          <% end %>
        <% elsif !@birthday_users.any? %>
          <div class="text-center py-4">
            <p class="text-gray-500">現在、お知らせはありません。</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- カレンダー表示部分 -->
  <div class="overflow-x-auto">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <%= render 'shared/calendar' %>
    </div>
  </div>
  
</div>

<!-- ベストタイムセクション -->
<div class="bg-white shadow rounded-lg p-6 mt-12" data-controller="home" data-home-default-tab-value="<%= @default_tab %>">
