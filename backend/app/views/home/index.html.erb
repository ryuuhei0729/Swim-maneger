                        <% time = @best_times[player.id][event[:id]] %>
                        <% if time %>
                          <%= format_time(time) %>
                        <% else %>
                          -
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

